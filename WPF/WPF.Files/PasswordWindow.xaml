<Window x:Class="Amaterasu.WPF.Files.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amaterasu.WPF.Files"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="200" Width="400">
    <Grid Background="#FF068686" KeyDown="Grid_KeyDown">
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Left" Margin="93,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Bodoni MT Black" Width="205" FontSize="20"/>
        <Label Content="Введите пароль" HorizontalAlignment="Left" Margin="93,15,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Bodoni MT Black" Background="Transparent"/>
    </Grid>
</Window>
