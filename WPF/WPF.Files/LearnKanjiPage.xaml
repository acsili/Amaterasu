<Page x:Class="Amaterasu.WPF.Files.LearnKanjiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Amaterasu.WPF.Files"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LearnKanjiPage">

    <Grid Background="#FFF8B172" KeyDown="Grid_KeyDown">
        <Label x:Name="LabelKanji" Content="La" Background="White" FontFamily="Comic Sans MS" 
               HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" FontSize="100"/>
        <Label x:Name="LabelOnReading" Content="Reading" Background="White" FontFamily="Comic Sans MS" 
               HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" FontSize="40"/>
        <Button x:Name="ButtonBackToMenu" Content="Назад" HorizontalAlignment="Left" FontFamily="Comic Sans MS" 
                Margin="650,350,0,0" VerticalAlignment="Top" Height="50" Width="100" Background="#FFF67280" 
                Foreground="White" FontSize="20" Click="ButtonBackToMenu_Click"/>

    </Grid>
</Page>
